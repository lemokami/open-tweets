<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body class="container mx-auto my-2">
    <%- include('./partials/nav.ejs') %>
    <div class="flex flex-col">
      <% tweets.forEach(tweet => { %>
      <div
        class="
          rounded
          py-4
          px-8
          my-2
          flex
          justify-between
          items-center
          shadow
          border
          mx-2
        "
      >
        <div class="flex flex-col">
          <p class="text-xl font-light"><%= tweet.tweet %></p>
          <div class="flex space-x-4">
            <span class="text-sm"><%= tweet.username%></span>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </body>
</html>
